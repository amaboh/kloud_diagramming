{
  "name": "cloud-diagrams-typescript",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:watch": "lerna run test:watch --parallel",
    "lint": "eslint packages/*/src --ext .ts,.tsx",
    "lint:fix": "eslint packages/*/src --ext .ts,.tsx --fix",
    "typecheck": "lerna run typecheck",
    "clean": "lerna run clean && lerna clean --yes",
    "bootstrap": "npm install",
    "dev": "lerna run dev --parallel",
    "build:playground": "lerna run build:playground",
    "start:docs": "lerna run start --scope=@cloud-diagrams/docs",
    "install:all": "npm install && lerna bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "lerna": "^7.1.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.0"
  },
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "uuid": "^11.1.0"
  }
}
